        "summary": "POST API endpoint for adding new job offers",
        "produces": ["application/json"],
        "consumes": ["application/x-www-form-urlencoded"],
        "parameters": [
          {
            "name": "description",
            "in": "formData",
            "description": "job description",
            "required": true,
            "type": "sting"
          },
          {
            "name": "title",
            "in": "formData",
            "description": "job title",
            "required": true,
            "type": "string"
          },
          {
            "name": "recruiter",
            "in": "formData",
            "description": "job recruiter",
            "required": true,
            "type": "string"
          },
          {
            "name": "recruiter",
            "in": "formData",
            "description": "job recruiter",
            "required": true,
            "type": "string"
          },
          {
            "name": "recruiterContact",
            "in": "formData",
            "description": "job recruiterContact",
            "required": true,
            "type": "string"
          },
          {
            "name": "numberOfHires",
            "in": "formData",
            "description": "job numberOfHires",
            "required": false,
            "type": "string"
          },
          {
            "name": "numberOfHires",
            "in": "formData",
            "description": "job numberOfHires",
            "required": true,
            "type": "integer"
          },
          {
            "name": "locationId",
            "in": "formData",
            "description": "job locationId",
            "required": true,
            "type": "string"
          },
          {
            "name": "typeId",
            "in": "formData",
            "description": "job typeId",
            "required": true,
            "type": "string"
          },
          {
            "name": "skillId",
            "in": "formData",
            "description": "job skillId",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Already exists"
          },
          "500": {
            "description": "DB error"
          }
        }
      },
      "get": {
        "tags": ["Jobs"],
        "summary": "GET API endpoint for retrieving job openings",
        "produces": ["application/json"],
        "consumes": ["application/x-www-form-urlencoded"],
        "parameters": [
          {
            "name": "active",
            "in": "path",
            "description": "job description",
            "required": false,
            "type": "boolean"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "500": {
            "description": "DB error"
          }
        }
      }
    },
    "/jobs/{jobId}": {
      "patch": {
        "tags": ["Jobs"],
        "summary": "updates an existing job opening",
        "produces": ["application/json"],
        "consumes": ["application/x-www-form-urlencoded"],
        "parameters": [
          {
            "name": "jobId",
            "in": "path",
            "description": "jobId",
            "required": true,
            "type": "string"
          },
          {
            "name": "description",
            "in": "formData",
            "description": "job description",
            "required": true,
            "type": "boolestringan"
          },
          {
            "name": "title",
            "in": "formData",
