  "schemes": ["http"],
  "paths": {
    "/users/create": {
      "post": {
        "tags": ["User"],
        "summary": "POST API endpoint for creating and subscribing new users",
        "produces": ["application/json"],
        "consumes": ["application/x-www-form-urlencoded"],
        "parameters": [
          {
            "name": "email",
            "in": "formData",
            "description": "email of the user",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Already exists"
          },
          "500": {
            "description": "DB error"
          }
        }
      }
    },
    "/users/toggle-subscription": {
      "post": {
        "tags": ["User"],
        "summary": "PATCH API endpoint for unsubscribing and subscribing existing users",
        "produces": ["application/json"],
        "consumes": ["application/x-www-form-urlencoded"],
        "parameters": [
          {
            "name": "email",
            "in": "formData",
            "description": "email of the user",
            "required": true,
            "type": "string"
          },
          {
            "name": "isSubscribed",
            "in": "formData",
            "description": "boolean value to describe the toggle you want",
            "required": true,
            "type": "boolean"
          }
        ],
        "responses": {
          "200": {
            "description": "successful operation"
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Already exists"
          },
          "500": {
            "description": "DB error"
          }
        }
      }
    },
