{
  "name": "TAIKAI",
  "version": "1.0.0",
  "engines": {
    "node": "10.16.3"
  },
  "description": "TAIKAI ASSESSMENT APP",
  "main": "app.js",
  "scripts": {
    "build": "babel server -d dist",
    "start:dev": "babel-watch server/app.js",
    "start": "cross-env NODE_ENV=production && npm run build && node dist/app.js",
    "seed": "cross-env NODE_ENV=test npx sequelize db:seed:all",
    "migrate": "npx sequelize-cli db:migrate",
    "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
    "test": "cross-env NODE_ENV=test jest --coverage --testTimeout=20000",
    "pretest": "cross-env NODE_ENV=test npm run migrate:reset && npm run seed",
    "prod:reset": "heroku run sequelize db:migrate:undo:all --app salty-journey-62723 && heroku run sequelize db:migrate --app salty-journey-62723 && heroku run sequelize db:seed:all --app salty-journey-62723 ",
    "eslint:fix": "eslint --fix server/",
    "prettier:check": "prettier --check \"./**/*.js\"",
    "prettier:fix": "prettier --write \"./**/*.js\"",
    "eslint:check": " node node_modules/eslint/bin/eslint.js \"./**/*.js\"",
    "check:lint-prettier": "npm run eslint:check && npm run prettier:check",
    "env": "sync-dotenv"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Victory Akaniru",
  "license": "ISC",
  "bugs": {
    "url": ""
  },
  "homepage": "",
  "devDependencies": {
    "babel-watch": "^7.0.0",
    "coveralls": "^3.0.9",
    "eslint": "^5.15.3",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lint-staged": "^10.1.0",
    "prettier": "^1.19.1",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/node": "^7.2.2",
    "@babel/plugin-transform-runtime": "^7.4.0",
    "@babel/polyfill": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/register": "^7.4.0",
    "@babel/runtime": "^7.8.4",
    "@hapi/joi": "^16.1.7",
    "babel-eslint": "^10.0.1",
    "bull": "^3.12.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "dotenv": "^7.0.0",
    "express": "^4.16.4",
    "helmet": "^3.21.2",
    "koii": "^2.0.3",
    "nodemailer": "^6.4.2",
    "pg": "^7.17.1",
    "pg-hstore": "^2.3.3",
    "redis": "^3.0.2",
    "sequelize": "^5.21.3",
    "sequelize-cli": "^5.5.1",
    "swagger-jsdoc": "^3.2.9",
    "swagger-ui-express": "^4.1.1",
    "sync-dotenv": "^2.4.0",
    "uuid": "^7.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "npm run env",
      "prettier --write",
      "git add"
    ],
    "*.js": "eslint --cache --fix"
  },
  "nyc": {
    "exclude": [
      "server/db/*.js",
      "tests"
    ]
  }
}
